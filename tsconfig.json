{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "types": [
      "vitest/importMeta"
    ]
  },
  "include": [
    "src/**/*",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
